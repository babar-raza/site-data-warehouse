name: Security Scanning

on:
  push:
    branches: [main, develop]
  pull_request:
    branches: [main, develop]
  schedule:
    # Run security scans daily at 2 AM UTC
    - cron: '0 2 * * *'
  workflow_dispatch:

permissions:
  contents: read
  security-events: write
  issues: write

jobs:
  dependency-audit:
    name: Dependency Vulnerability Scanning
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
          cache: 'pip'

      - name: Install scanning tools
        run: |
          python -m pip install --upgrade pip
          pip install safety pip-audit

      - name: Run Safety check with full report
        run: |
          echo "Running Safety vulnerability scan..."
          safety check --full-report --file requirements.txt || EXIT_CODE=$?
          if [ ! -z "$EXIT_CODE" ]; then
            echo "::error::Safety found vulnerabilities in requirements.txt"
            exit $EXIT_CODE
          fi
        continue-on-error: false

      - name: Run Safety check on test dependencies
        run: |
          echo "Running Safety vulnerability scan on test dependencies..."
          safety check --full-report --file requirements-test.txt || EXIT_CODE=$?
          if [ ! -z "$EXIT_CODE" ]; then
            echo "::error::Safety found vulnerabilities in requirements-test.txt"
            exit $EXIT_CODE
          fi
        continue-on-error: false

      - name: Run pip-audit on requirements.txt
        run: |
          echo "Running pip-audit on requirements.txt..."
          pip-audit -r requirements.txt --desc --format json > pip-audit-main.json || EXIT_CODE=$?

          # Display results
          cat pip-audit-main.json | python3 -m json.tool

          # Check for HIGH or CRITICAL vulnerabilities
          if [ ! -z "$EXIT_CODE" ]; then
            HIGH_CRITICAL=$(cat pip-audit-main.json | python3 -c "
          import sys, json
          data = json.load(sys.stdin)
          vulnerabilities = data.get('vulnerabilities', [])
          high_critical = [v for v in vulnerabilities if v.get('severity', '').upper() in ['HIGH', 'CRITICAL']]
          print(len(high_critical))
          " || echo "0")

            if [ "$HIGH_CRITICAL" -gt 0 ]; then
              echo "::error::Found $HIGH_CRITICAL HIGH or CRITICAL vulnerabilities in requirements.txt"
              exit 1
            fi
          fi

      - name: Run pip-audit on requirements-test.txt
        run: |
          echo "Running pip-audit on requirements-test.txt..."
          pip-audit -r requirements-test.txt --desc --format json > pip-audit-test.json || EXIT_CODE=$?

          # Display results
          cat pip-audit-test.json | python3 -m json.tool

          # Check for HIGH or CRITICAL vulnerabilities
          if [ ! -z "$EXIT_CODE" ]; then
            HIGH_CRITICAL=$(cat pip-audit-test.json | python3 -c "
          import sys, json
          data = json.load(sys.stdin)
          vulnerabilities = data.get('vulnerabilities', [])
          high_critical = [v for v in vulnerabilities if v.get('severity', '').upper() in ['HIGH', 'CRITICAL']]
          print(len(high_critical))
          " || echo "0")

            if [ "$HIGH_CRITICAL" -gt 0 ]; then
              echo "::error::Found $HIGH_CRITICAL HIGH or CRITICAL vulnerabilities in requirements-test.txt"
              exit 1
            fi
          fi

      - name: Upload pip-audit results
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: pip-audit-reports
          path: |
            pip-audit-main.json
            pip-audit-test.json
          retention-days: 30

  secret-scanning:
    name: Secret Detection
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: TruffleHog OSS - Scan entire repository history
        uses: trufflesecurity/trufflehog@main
        with:
          # Scan entire repo history
          path: ./
          base: ""
          head: HEAD
          # Scan only verified secrets to reduce false positives
          extra_args: --only-verified --json --fail
        continue-on-error: false

      - name: Run additional pattern-based secret scanning
        run: |
          echo "Scanning for common secret patterns..."

          # Define patterns to search for (excluding .git directory)
          PATTERNS=(
            "password\s*=\s*['\"][^'\"]{8,}['\"]"
            "api[_-]?key\s*=\s*['\"][^'\"]{16,}['\"]"
            "secret[_-]?key\s*=\s*['\"][^'\"]{16,}['\"]"
            "aws[_-]?access[_-]?key[_-]?id\s*=\s*['\"]AKIA[A-Z0-9]{16}['\"]"
            "private[_-]?key\s*=\s*['\"]-----BEGIN"
            "token\s*=\s*['\"][^'\"]{20,}['\"]"
            "bearer\s+[A-Za-z0-9\-\._~\+\/]+=*"
          )

          FOUND_SECRETS=0

          for pattern in "${PATTERNS[@]}"; do
            echo "Checking pattern: $pattern"
            # Search but exclude common safe locations
            MATCHES=$(grep -rniE "$pattern" . \
              --exclude-dir=".git" \
              --exclude-dir="node_modules" \
              --exclude-dir="venv" \
              --exclude-dir=".pytest_cache" \
              --exclude="*.pyc" \
              --exclude="*.log" \
              --exclude=".env.example" \
              --exclude=".env.template" \
              --exclude="*.md" \
              2>/dev/null || true)

            if [ ! -z "$MATCHES" ]; then
              echo "::warning::Potential secrets found for pattern: $pattern"
              # Don't print matches to avoid exposing secrets in logs
              echo "Found matches - review manually"
              FOUND_SECRETS=$((FOUND_SECRETS + 1))
            fi
          done

          if [ $FOUND_SECRETS -gt 0 ]; then
            echo "::error::Found $FOUND_SECRETS potential secret patterns. Review the code manually."
            exit 1
          else
            echo "No suspicious patterns found."
          fi

      - name: Check for exposed credentials in config files
        run: |
          echo "Checking configuration files for exposed credentials..."

          # Check .env files (should only have .env.example or .env.template)
          if find . -name ".env" -not -name ".env.example" -not -name ".env.template" -not -name ".env.production.template" -not -path "*/\.*" | grep -q .; then
            echo "::error::Found .env files that should not be committed"
            find . -name ".env" -not -name ".env.example" -not -name ".env.template" -not -name ".env.production.template" -not -path "*/\.*"
            exit 1
          fi

          echo "No exposed .env files found."

  sast-scanning:
    name: Static Application Security Testing (SAST)
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'
          cache: 'pip'

      - name: Install Bandit
        run: |
          python -m pip install --upgrade pip
          pip install bandit[toml]

      - name: Run Bandit SAST scan - Medium severity minimum
        run: |
          echo "Running Bandit security scan with medium severity minimum..."
          bandit -r . \
            -f json \
            -o bandit-report.json \
            -ll \
            --exclude './.git,./venv,./node_modules,./.pytest_cache,./tests' \
            --severity-level medium \
            --confidence-level medium || EXIT_CODE=$?

          # Display results in readable format
          bandit -r . \
            -f txt \
            -ll \
            --exclude './.git,./venv,./node_modules,./.pytest_cache,./tests' \
            --severity-level medium \
            --confidence-level medium || true

          # Parse JSON report for HIGH/CRITICAL issues
          if [ -f bandit-report.json ]; then
            echo "Analyzing Bandit results..."
            HIGH_CRITICAL=$(python3 -c "
          import json
          try:
              with open('bandit-report.json', 'r') as f:
                  data = json.load(f)
              results = data.get('results', [])
              high_critical = [r for r in results if r.get('issue_severity', '').upper() in ['HIGH', 'CRITICAL']]
              print(len(high_critical))
          except Exception as e:
              print('0')
          ")

            if [ "$HIGH_CRITICAL" -gt 0 ]; then
              echo "::error::Found $HIGH_CRITICAL HIGH or CRITICAL security issues"
              exit 1
            else
              echo "No HIGH or CRITICAL security issues found."
            fi
          fi

      - name: Upload Bandit report
        if: always()
        uses: actions/upload-artifact@v4
        with:
          name: bandit-report
          path: bandit-report.json
          retention-days: 30

  supply-chain-security:
    name: Supply Chain Security
    runs-on: ubuntu-latest

    steps:
      - name: Checkout code
        uses: actions/checkout@v4
        with:
          fetch-depth: 0

      - name: Set up Python
        uses: actions/setup-python@v5
        with:
          python-version: '3.11'

      - name: Check for unpinned dependencies
        run: |
          echo "Checking for unpinned dependencies..."

          # Check if all dependencies are pinned
          UNPINNED_MAIN=$(grep -E "^[^#].*[><=]" requirements.txt | grep -v "==" | wc -l || echo "0")
          UNPINNED_TEST=$(grep -E "^[^#].*[><=]" requirements-test.txt | grep -v "==" | wc -l || echo "0")

          if [ "$UNPINNED_MAIN" -gt 0 ]; then
            echo "::warning::Found $UNPINNED_MAIN unpinned dependencies in requirements.txt"
            grep -E "^[^#].*[><=]" requirements.txt | grep -v "==" || true
          fi

          if [ "$UNPINNED_TEST" -gt 0 ]; then
            echo "::warning::Found $UNPINNED_TEST unpinned dependencies in requirements-test.txt"
            grep -E "^[^#].*[><=]" requirements-test.txt | grep -v "==" || true
          fi

          # Don't fail on unpinned deps, just warn
          echo "Supply chain check completed."

      - name: Verify requirements files exist
        run: |
          if [ ! -f "requirements.txt" ]; then
            echo "::error::requirements.txt not found"
            exit 1
          fi

          if [ ! -f "requirements-test.txt" ]; then
            echo "::error::requirements-test.txt not found"
            exit 1
          fi

          echo "All requirements files present."

  security-summary:
    name: Security Scan Summary
    runs-on: ubuntu-latest
    needs: [dependency-audit, secret-scanning, sast-scanning, supply-chain-security]
    if: always()

    steps:
      - name: Check job statuses
        run: |
          echo "Security Scan Summary:"
          echo "======================="
          echo "Dependency Audit: ${{ needs.dependency-audit.result }}"
          echo "Secret Scanning: ${{ needs.secret-scanning.result }}"
          echo "SAST Scanning: ${{ needs.sast-scanning.result }}"
          echo "Supply Chain Security: ${{ needs.supply-chain-security.result }}"

          if [ "${{ needs.dependency-audit.result }}" != "success" ] || \
             [ "${{ needs.secret-scanning.result }}" != "success" ] || \
             [ "${{ needs.sast-scanning.result }}" != "success" ] || \
             [ "${{ needs.supply-chain-security.result }}" != "success" ]; then
            echo "::error::One or more security scans failed"
            exit 1
          fi

          echo "All security scans passed successfully!"

      - name: Post summary to job
        if: always()
        run: |
          echo "## Security Scan Results" >> $GITHUB_STEP_SUMMARY
          echo "" >> $GITHUB_STEP_SUMMARY
          echo "| Check | Status |" >> $GITHUB_STEP_SUMMARY
          echo "|-------|--------|" >> $GITHUB_STEP_SUMMARY
          echo "| Dependency Audit | ${{ needs.dependency-audit.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Secret Scanning | ${{ needs.secret-scanning.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| SAST Scanning | ${{ needs.sast-scanning.result }} |" >> $GITHUB_STEP_SUMMARY
          echo "| Supply Chain Security | ${{ needs.supply-chain-security.result }} |" >> $GITHUB_STEP_SUMMARY
